<!--- The default skin class for the Spark SkinnableDataContainer container.

	 @see spark.components.SkinnableDataContainer

	 @langversion 3.0
	 @playerversion Flash 10
	 @playerversion AIR 1.5
	 @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		width="85%"
		minHeight="100">

	<fx:Metadata>
		<![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("com.conceptualideas.chat.plugins.video.views.CameraChooserDialog")]
    ]]>
	</fx:Metadata>

	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>

	<!--
		 Note: setting the minimum size to 0 here so that changes to the host component's
		 size will not be thwarted by this skin part's minimum size.   This is a compromise,
		 more about it here: http://bugs.adobe.com/jira/browse/SDK-21143
	-->
	<s:Rect radiusX="5"
			radiusY="5"
			width="100%"
			height="100%">
		<s:fill>
			<s:SolidColor color="0x1F1F1F"/>
		</s:fill>

	</s:Rect>
	<s:Button label="Close"
			  id="closeButton"
			  top="5"
			  right="5"/>
	<s:Label id="label"
			 text="Select your Camera"
			 horizontalCenter="0"
			 fontSize="20"/>
	<!--- @copy spark.components.SkinnableDataContainer#dataGroup -->
	<s:DataGroup id="dataGroup"
				 left="5"
				 right="5"
				 top="25"
				 bottom="5"
				 minWidth="0"
				 minHeight="0"
				 itemRenderer="com.conceptualideas.chat.plugins.video.renderers.CameraChooserItemRenderer">
		<s:layout>
			<s:TileLayout rowHeight="140"
						  columnWidth="160"
						  horizontalGap="2"
						  verticalGap="2"/>
		</s:layout>
	</s:DataGroup>

</s:Skin>
